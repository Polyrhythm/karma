.cover-image
  width: 100%
  min-height: 300px
  max-height: 400px
  height: auto
  overflow: hidden
  position: relative

  .back
    position: absolute
    left: 0.5em
    top: 10px
    font-size: 3em
    color: rgba(255,255,255,0.5)
    cursor: pointer
    transition-property: color
    transition-duration: 0.3s

    &:hover
      color: rgba(255,255,255,1)
      transition-property: color
      transition-duration: 0.3s

  > img
    background-size: cover

  .caption
    position: absolute
    bottom: 1em
    left: 1em
    color: white
    text-align: left

    > h1
      font-size: 3em
      color: white
      text-shadow: rgba(50,50,50,0.5) 0 0 10pz

    > h2
      font-size: 1.5em
      color: white

.project-details
  width: 100%
  border-top: 3px solid karmaBlue
  background: #ccc

  .interested-volunteers
    position: relative
    background: white
    width: 100%
    border-bottom: 1px solid #999

    .tagline
      position: absolute
      font-weight: bold
      top: 0.2em
      left: 3em

    .interested-list
      margin: 1.7em 0 0 2em

      .interested-li
        float: left
        margin-right: 2em
        height: 100px
        overflow: hidden

        .volunteer-profile
          border-radius: 50%
          overflow: hidden
          width: 70px
          height: 70px
          cursor: pointer
          opacity: 0.7
          transition-property: opacity
          transition-duration: 0.5s
          background: #ccc

          &.add
            > span
              font-size: 2em
              line-height: 70px

          &:hover
            opacity: 1
            transition-property: opacity
            transition-duration: 0.5s

          > img
            width: 100%
            height: 100%

.project-deets
  padding: 1em 3.5em

  > div
    display: block
    text-align: left
    
    .deet-header
      margin-bottom: 0
      font-weight: bold

.date
  margin-bottom: 1em
